<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nmg.teach.modular.system.dao.StudentDao">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.nmg.teach.common.persistence.model.Student">
		<id column="id" property="id" />
		<result column="user_id" property="userId" />
		<result column="name" property="name" />
		<result column="contact_phone" property="contactPhone" />
		<result column="sex" property="sex" />
		<result column="photo_url" property="photoUrl" />
		<result column="create_time" property="createTime" />
		<result column="update_time" property="updateTime" />
	</resultMap>

	<!-- 通用查询结果列 -->
	<sql id="Base_Column_List">
		id, user_id AS userId, name, contact_phone AS contactPhone, sex, photo_url AS photoUrl, create_time AS createTime, update_time AS updateTime
	</sql>


	<select id="selectUsers" resultType="map">
		select
		<include refid="Base_Column_List" />
		from less_student
		where
		<if test="name != null and name != ''">
			name like CONCAT('%',#{name},'%'))
		</if>
		order by id ASC ;

	</select>



	<update id="setRoles">
		update sys_user set roleid = #{roleIds} where id =
		#{userId}
	</update>


</mapper>